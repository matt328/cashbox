{
  "name": "cashbox",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format": "find src -name '*.html' -exec node_modules/.bin/html-beautify -qr {} + && prettier --write src/**/*.ts",
    "cz": "git-cz",
    "push:hook": "ng test --watch=false",
    "cy:open:ui": "ng e2e ui-test --watch",
    "cy:run:ui": "ng e2e ui-test",
    "storybook": "start-storybook -p 4201",
    "storybook:ci": "start-storybook -p 4201 --ci",
    "test:ui": "start-server-and-test storybook:ci http-get://localhost:4201 cy:run:ui",
    "test:ui:watch": "start-server-and-test storybook:ci http-get://localhost:4201 cy:open:ui"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run push:hook"
    }
  },
  "lint-staged": {
    "*.{ts,json,css,md}": [
      "prettier --write"
    ],
    "*.html": [
      "html-beautify -qr"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^12.2.2",
    "@angular/cdk": "^12.2.2",
    "@angular/common": "^12.2.2",
    "@angular/compiler": "^12.2.2",
    "@angular/core": "^12.2.2",
    "@angular/fire": "^6.1.5",
    "@angular/forms": "^12.2.2",
    "@angular/material": "^12.2.2",
    "@angular/platform-browser": "^12.2.2",
    "@angular/platform-browser-dynamic": "^12.2.2",
    "@angular/router": "^12.2.2",
    "@ncstate/sat-popover": "^8.0.1",
    "firebase": "^8.10.0",
    "performant-array-to-tree": "^1.9.1",
    "ramda": "^0.27.1",
    "rxjs": "^7.3.0",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1301.3",
    "@angular-devkit/build-angular": "^12.1.4",
    "@angular/cli": "^12.2.2",
    "@angular/compiler-cli": "^12.2.2",
    "@babel/core": "^7.15.0",
    "@nrwl/cypress": "^12.7.2",
    "@nrwl/workspace": "^12.7.2",
    "@types/jasmine": "^3.8.2",
    "@types/jasminewd2": "^2.0.10",
    "@types/node": "^16.7.1",
    "@types/ramda": "^0.27.44",
    "autoprefixer": "^10.3.2",
    "babel-loader": "^8.2.2",
    "codelyzer": "^6.0.0",
    "commitizen": "^4.2.4",
    "cypress": "^8.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "diff": "^5.0.0",
    "firebase-tools": "^9.16.5",
    "fuzzy": "^0.1.3",
    "husky": "^7.0.1",
    "inquirer": "^8.1.2",
    "inquirer-autocomplete-prompt": "^1.4.0",
    "jasmine-core": "^3.9.0",
    "jasmine-spec-reporter": "^7.0.0",
    "js-beautify": "^1.14.0",
    "karma": "^6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.7.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "lint-staged": "^11.1.2",
    "mocha": "^9.1.0",
    "open": "^8.2.1",
    "prettier": "^2.3.2",
    "start-server-and-test": "^1.13.1",
    "ts-mocks": "^3.0.1",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
