{
  "name": "cashbox",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "format": "find src -name '*.html' -exec node_modules/.bin/html-beautify -qr {} + && prettier --write src/**/*.ts",
    "cz": "git-cz",
    "push:hook": "ng test --watch=false",
    "cy:open:ui": "ng e2e ui-test --watch",
    "cy:run:ui": "ng e2e ui-test",
    "storybook": "start-storybook -p 4201",
    "storybook:ci": "start-storybook -p 4201 --ci",
    "test:ui": "start-server-and-test storybook:ci http-get://localhost:4201 cy:run:ui",
    "test:ui:watch": "start-server-and-test storybook:ci http-get://localhost:4201 cy:open:ui"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run push:hook"
    }
  },
  "lint-staged": {
    "*.{ts,json,css,md}": [
      "prettier --write"
    ],
    "*.html": [
      "html-beautify -qr"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^11.2.14",
    "@angular/cdk": "^10.2.0",
    "@angular/common": "^11.2.14",
    "@angular/compiler": "^11.2.14",
    "@angular/core": "^11.2.14",
    "@angular/fire": "^6.0.2",
    "@angular/forms": "^11.2.14",
    "@angular/material": "^10.2.0",
    "@angular/platform-browser": "^11.2.14",
    "@angular/platform-browser-dynamic": "^11.2.14",
    "@angular/router": "^11.2.14",
    "@ncstate/sat-popover": "^6.0.0",
    "firebase": "^7.19.1",
    "performant-array-to-tree": "^1.7.1",
    "ramda": "^0.27.1",
    "rxjs": "^6.6.3",
    "tslib": "^2.0.0",
    "zone.js": "^0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1102.14",
    "@angular-devkit/build-angular": "^0.1102.14",
    "@angular/cli": "^11.2.14",
    "@angular/compiler-cli": "^11.2.14",
    "@babel/core": "^7.11.6",
    "@nrwl/cypress": "^10.1.0",
    "@nrwl/workspace": "^10.1.0",
    "@storybook/angular": "^6.0.21",
    "@storybook/theming": "^6.0.21",
    "@types/jasmine": "~3.8.2",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.6.4",
    "@types/ramda": "^0.27.14",
    "babel-loader": "^8.1.0",
    "codelyzer": "^6.0.0",
    "commitizen": "^4.2.1",
    "cypress": "^5.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "diff": "^4.0.2",
    "firebase-tools": "^8.10.0",
    "fuzzy": "^0.1.3",
    "husky": "^4.3.0",
    "inquirer": "^7.3.3",
    "inquirer-autocomplete-prompt": "^1.1.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "js-beautify": "^1.13.0",
    "karma": "^5.2.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "lint-staged": "^10.3.0",
    "mocha": "^8.1.3",
    "open": "^7.2.1",
    "prettier": "^2.1.1",
    "start-server-and-test": "^1.11.3",
    "ts-mocks": "^3.0.1",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.1.6"
  }
}
